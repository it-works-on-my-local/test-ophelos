<!-- app/views/ie_statements/show.html.erb -->

<h1>Result</h1>

<%= simple_form_for @ie_statement, html: { class: 'form-horizontal' } do |form| %>
  <div class="form-group">
    <%= form.label :person_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= @ie_statement.person_name %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :income, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= @ie_statement.income %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :expenditure, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= @ie_statement.expenditure %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :disposable_income, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= @disposable_income %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :rating, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= @rating %>
    </div>
  </div>

  <%= form.button :submit, class: 'btn-primary' %>
<% end
